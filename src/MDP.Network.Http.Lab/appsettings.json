{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.*": "Warning",
      "System.*": "Warning"
    }
  },

  "MDP.Network.Http": {
    "HttpClientFactory": {
      "Endpoints": {
        "DefaultService": {
          "BaseAddress": "https://postman-echo.com/",
          "Headers": {
            "accept-language": "zh-Hant"
          },
          "Handlers": [ "DefaultAzureCredentialHandler[SqlDatabase]" ]
        }
      }
    }
  },

  "MDP.Network.Http.Azure": {
    "DefaultAzureCredentialHandler[SqlDatabase]": { "Scopes": [ "https://database.windows.net/.default" ] },
  }
}