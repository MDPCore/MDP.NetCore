{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.*": "Warning",
      "System.*": "Warning"
    }
  },

  "MDP.Data.MSSql": {
    "SqlClientFactory": {
      "Endpoints": {
        "DefaultDatabase": {
          "ConnectionString": "Server=tcp:mdpnetcore.database.windows.net,1433;Initial Catalog=mvp-db;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;",
          "Handlers": [ "DefaultAzureCredentialHandler[SqlDatabase]" ]
        }
      }
    }
  },

  "MDP.Data.MSSql.Azure": {
    "DefaultAzureCredentialHandler[SqlDatabase]": { "Scopes": [ "https://database.windows.net/.default" ] }
  }
}